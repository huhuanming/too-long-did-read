---
interface Props {
  titleEn: string;
  titleZh: string;
  date: Date;
  slug: string;
}

const { titleEn, titleZh, date, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/posts/${slug}`} class="block p-4 -mx-4 rounded-xl glow-border transition-all">
    <div class="flex items-start justify-between gap-4">
      <div class="min-w-0">
        <h2 class="text-base font-medium text-zinc-100 group-hover:text-violet-300 transition-colors leading-snug truncate">
          {titleEn}
        </h2>
        <p class="mt-1 text-sm text-zinc-500 leading-snug truncate">
          {titleZh}
        </p>
      </div>
      <time class="text-xs text-zinc-600 tabular-nums whitespace-nowrap pt-1">
        {formattedDate}
      </time>
    </div>
  </a>
</article>
