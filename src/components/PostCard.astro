---
interface Props {
  titleEn: string;
  titleZh: string;
  date: Date;
  slug: string;
}

const { titleEn, titleZh, date, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group py-4">
  <a href={`/posts/${slug}`} class="block">
    <time class="text-sm text-neutral-400 dark:text-neutral-500 tabular-nums">
      {formattedDate}
    </time>
    <h2 class="mt-1 text-lg font-medium text-neutral-900 dark:text-neutral-100 group-hover:opacity-70 transition-opacity leading-snug">
      {titleEn}
    </h2>
    <p class="mt-0.5 text-base text-neutral-500 dark:text-neutral-400 leading-snug">
      {titleZh}
    </p>
  </a>
</article>
