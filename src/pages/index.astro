---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="too long; did read">
  <div class="mb-12">
    <h1 class="text-3xl font-bold tracking-tight gradient-text">
      too long; did read
    </h1>
    <p class="mt-3 text-zinc-500 text-lg">
      AI articles & insights, curated and translated into Chinese.
    </p>
  </div>

  <div class="space-y-1">
    {
      posts.map((post) => (
        <PostCard
          titleEn={post.data.titleEn}
          titleZh={post.data.titleZh}
          date={post.data.date}
          slug={post.data.slug}
        />
      ))
    }
  </div>
</BaseLayout>

<script>
  function initCardShare() {
    document.querySelectorAll('.share-card-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();

        const el = e.currentTarget as HTMLButtonElement;
        const url = new URL(el.dataset.url!, window.location.origin).href;
        const title = el.dataset.title || '';

        if (navigator.share) {
          try { await navigator.share({ title, url }); } catch (_) {}
          return;
        }

        try {
          await navigator.clipboard.writeText(url);
        } catch (_) {
          const input = Object.assign(document.createElement('input'), { value: url });
          document.body.appendChild(input);
          input.select();
          document.execCommand('copy');
          input.remove();
        }

        // Brief visual feedback
        const svg = el.querySelector('svg')!;
        el.classList.add('text-violet-400');
        setTimeout(() => el.classList.remove('text-violet-400'), 1500);
      });
    });
  }

  initCardShare();
  document.addEventListener('astro:after-swap', initCardShare);
</script>
